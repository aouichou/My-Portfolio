#!/bin/bash
# Custom bashrc for terminal sandbox
PS1='\[\033[1;32m\]\u@\h:\[\033[1;34m\]\W\[\033[0m\]\$ '

# Ensure proper terminal settings
export TERM=xterm-256color
export SHELL=/bin/bash
stty erase ^H
stty columns 80 rows 24

# Resource limits for safety (but allow compilation)
ulimit -t 300      # CPU time (seconds) - 5 min for compilation
ulimit -v 1048576  # Virtual memory (KB) - 1GB
ulimit -f 102400   # File size (KB) - 100MB for binaries

# Define useful aliases
alias ls='ls --color=auto'
alias ll='ls -la'
alias py='python3'
alias clear='echo -e "\033c"'  # Fix clear command

# Welcome message with project info
if [ -n "$PROJECT" ]; then
    echo -e "\033[1;34mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\033[0m"
    echo -e "\033[1;36m    Welcome to $PROJECT interactive terminal!\033[0m"
    echo -e "\033[1;34mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\033[0m"
    echo -e ""
    echo -e "\033[1;33mğŸ“‚ Available commands:\033[0m"
    echo -e "   â€¢ \033[0;32mls\033[0m        - List files"
    echo -e "   â€¢ \033[0;32mcd <dir>\033[0m  - Navigate directories"  
    echo -e "   â€¢ \033[0;32mcat <file>\033[0m - View file contents"
    echo -e "   â€¢ \033[0;32mmake\033[0m      - Compile the project"
    echo -e "   â€¢ \033[0;32m./<exec>\033[0m  - Run compiled program"
    echo -e ""
    echo -e "\033[1;33mğŸ’¡ Tips:\033[0m"
    echo -e "   â€¢ Run '\033[0;32mmake\033[0m' to compile"
    echo -e "   â€¢ Check '\033[0;32mREADME.md\033[0m' for project details"
    echo -e ""
fi
# Development Environment Variables
# Copy this to .env.dev and fill in your values

# Django Settings
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,backend,0.0.0.0

# Database (local PostgreSQL)
DATABASE_URL=postgresql://postgres:dev_password_change_me@db:5432/portfolio_dev
POSTGRES_DB=portfolio_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password_change_me

# Redis
REDIS_URL=redis://redis:6379/0

# CORS (allow local frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Service URLs (internal Docker network)
TERMINAL_SERVICE_URL=ws://terminal:8000
FRONTEND_URL=http://localhost:3000

# Email (optional for dev - leave blank to skip email)
SMTP_USER=
SMTP_PASSWORD=
ADMIN_EMAIL=dev@localhost
VERIFY_EMAIL_DOMAINS=False

# S3 (optional - leave blank to use local media storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=
AWS_S3_CUSTOM_DOMAIN=

# Render Production Credentials (for sync-prod-db.sh script)
# Get these from https://dashboard.render.com/
# RENDER_SERVICE_ID=srv-xxxxx
# RENDER_API_KEY=rnd_xxxxx
